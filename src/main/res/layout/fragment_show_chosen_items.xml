<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.danie.smartclosetapp.MainActivity"
    android:layoutDirection="ltr"
    android:background="#f5e9e2"

    >


    <GridView
        android:id="@+id/chosenImages"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_marginTop="5dp"
        android:gravity="center"
        android:horizontalSpacing="2dp"
        android:verticalSpacing="2dp"
      >

    </GridView>

    <ProgressBar
        android:id="@+id/progressBarSaveToFavorite"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="156dp"
        android:layout_above="@+id/saveToFavorite"
        android:layout_marginEnd="156dp"
        android:indeterminate="true"
        android:visibility="invisible" />

    <Button
        android:id="@+id/saveToFavorite"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_below="@+id/chosenImages"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="5dp"
        android:layout_marginTop="100dp"
        android:layout_marginEnd="5dp"
        android:background="#ffb4a2"
        android:fontFamily="serif"
        android:text="@string/save_favorite"
        android:textSize="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/noThanks"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_below="@+id/saveToFavorite"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:text="@string/noThanks"
        android:textSize="20dp"
        android:background="#ffb4a2"
        android:fontFamily="serif"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"/>


</RelativeLayout>